<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:orientation="vertical">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Наименование :"
                android:textSize="20dp"
                android:id="@+id/typeLabelView"
                android:layout_marginBottom="10dp"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleView"
                android:layout_marginBottom="10dp"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Тип :"
                android:textSize="20dp"
                android:id="@+id/typeLabelView1"
                android:layout_marginBottom="10dp"/>

        <Spinner
                android:id="@+id/typesSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Количество :"
                android:textSize="20dp"
                android:id="@+id/typeLabelView2"
                android:layout_marginBottom="10dp"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/countView"
                android:layout_marginBottom="10dp"
                android:text="1"/>

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buyButton"
                android:text="Продать"
                android:textSize="25dp"
                android:onClick="sellWare"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="2">

        <Button
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:text="Покупка"
                android:layout_weight="1"
                android:textSize="25dp"
                android:onClick="toBuyPage"
                android:background="#ffd7d7d7"/>

        <Button
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:text="Продажа"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="#ffa8a8a8"/>
    </LinearLayout>
</LinearLayout>